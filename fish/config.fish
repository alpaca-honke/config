set -U fish_color_command blue #005fd7
set -U fish_color_comment brblack  #990000
set -U fish_color_end blue #009900
set -U fish_color_escape green #00a6b2
set -U fish_color_operator 00a6b2
set -U fish_color_param cyan #00afff
set -U fish_color_quote yellow #999900

set -g theme_display_git_default_branch yes
set -g theme_display_user yes
set -g theme_display_hostname yes
set -g theme_color_scheme solarized

abbr --add ll 'ls -l'
abbr --add la 'ls -A'
abbr --add lla 'ls -l -A'
abbr --add gst 'git status'
abbr --add gsw 'git switch'
abbr --add gbr 'git branch'
abbr --add gfe 'git fetch'
abbr --add gpl 'git pull'
abbr --add gad 'git add'
abbr --add gcm 'git commit'
abbr --add gmg 'git merge'
abbr --add gpsh 'git push'
